  .playground__section
    .playground__section-left
      div

        a.playground__box(href="#" class!= classMod)
          .playground__box-top
            div
              img(src="img/circle-logo.svg" alt="")
              p preRSIST
            div
              span -14h 34m 35s
          .playground__box-head
            div
              .playground__box-visual
                img(src="img/img-venture.svg" alt="")
                p 100
          .playground__box-body
            ul
              li
                p Amount: 210.00
              li
                p!= "Reserve Price"
          .playground__box-footer
            p
              span Current Bid:
              img(src="img/circle-logo.svg" alt="")
              span 1920.00

    .playground__section-right
      div

        h2.playground__title Buy Now

        form.playground__form(action='' method='' autocomplete='off')
          .playground__form-field
            p.playground__form-label Price
            label
              input(type='text' name='' placeholder='')
              img(src="img/logo-playground.png" srcset="img/logo-playground@2x.png 2x" alt="")
              span / 6571.22 USDC

        .c-btn__wrapper.c-btn__wrapper--center
          a.c-btn.c-btn--bg(href="#") Buy Now

        a.playground__back(href="#") Back to Playground

